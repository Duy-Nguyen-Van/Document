    <act_window id="action_department_task"
                name="Department"
                res_model="hr.department"
                view_mode="tree,form"/>

    <act_window id="action_report_task"
                name="Report"
                res_model="doc.task"
                view_mode="tree,form"/>

    <act_window id="action_doc_type_view"
                name="Document Type"
