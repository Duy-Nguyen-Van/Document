    <menuitem id="menu_department_task_view"
              name="Department"
              sequence="5"
              action="action_department_task"
              parent="menu_doc_task"/>

    <menuitem id="menu_report_task_view"
              name="Report"
              sequence="6"
              action="action_report_task"
              parent="menu_doc_task"/>

    <menuitem id="menu_config_task_view"
              name="Configuration"
              sequence="7"
