<?xml version="1.0"?>
<data>
    <!-- Action to open Document Task list -->
    <act_window id="action_doc_task"
                name="Document Arrived"
                res_model="doc.task"
                view_mode="tree,form"/>

    <act_window id="action_department_task"
                name="Department"
                res_model="hr.department"
                view_mode="tree,form"/>

    <act_window id="action_report_task"
                name="Report"
                res_model="doc.task"
                view_mode="tree,form"/>

    <act_window id="action_doc_sent"
                name="Document Sent"
                res_model="doc.sent"
                view_mode="tree,form"/>

    <!-- Menu item to open Document Task list-->
    <menuitem id="menu_doc_task"
              name="Doc"
              action="action_doc_task"/>

    <menuitem id="menu_doc_task_view"
              name="Document"
              sequence="5"
              action="action_doc_task"
              parent="menu_doc_task"/>

    <menuitem id="menu_doc_arrvied_task_view"
              name="Document Arrived"
              sequence="10"
              action="action_doc_task"
              parent="menu_doc_task_view"/>

    <menuitem id="menu_doc_sent_task_view"
              name="Document Sent"
              sequence="10"
              action="action_doc_sent"
              parent="menu_doc_task_view"/>

    <menuitem id="menu_department_task_view"
              name="Department"
              sequence="5"
              action="action_department_task"
              parent="menu_doc_task"/>

    <menuitem id="menu_report_task_view"
              name="Report"
              sequence="6"
              action="action_report_task"
              parent="menu_doc_task"/>

    <menuitem id="menu_doc_manage_task_view"
              name="Document Management"
              sequence="5"
              action="action_doc_task"
              parent="menu_doc_task"/>

    <record id="action_doc_directory" model="ir.actions.act_window">
	    <field name="name">Document Directories</field>
	    <field name="res_model">doc.direct</field>
	    <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_doc_directory" name="Directories"
	    parent="menu_doc_manage_task_view" action="action_doc_directory" sequence="9"/>

    <record id="action_doc_documents" model="ir.actions.client">
	    <field name="name">DocumentTreeView</field>
	    <field name="tag">muk_dms_views.documents</field>
    </record>

    <menuitem id="menu_doc_tree_view" name="Documents"
	    parent="menu_doc_manage_task_view" action="action_doc_documents" sequence="8"/>
</data>