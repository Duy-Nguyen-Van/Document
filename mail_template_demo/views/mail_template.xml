<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="example_email_template" model="mail.template">
          <field name="name">Example e-mail template</field>
          <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
          <field name="subject">Document from ${object.organization.name}</field>
          <field name="email_to">${object.email|safe}</field>
          <field name="lang">${object.lang}</field>
          <field name="attachment_ids">${object.file_id}</field>
          <field name="model_id" ref="doc.task"/>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
	      <p>Dear ${(object.department_id.name)},<br/><br/>
	      Here is the document from ${object.organization.name}<br/></p>
              Regards,<br/>
              TCHC
	    ]]>
	  </field>
       </record>
    </data>
</odoo>
